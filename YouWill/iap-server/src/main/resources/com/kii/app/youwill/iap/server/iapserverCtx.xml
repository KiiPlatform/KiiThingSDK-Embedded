<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd
		">

    <context:component-scan base-package="com.kii.app.youwill.iap.server">
        <context:exclude-filter type="annotation"
                                expression="org.springframework.stereotype.Controller"/>

        <context:exclude-filter type="regex" expression="com.kii.app.youwill.iap.server.test.*" />
        <context:exclude-filter type="regex" expression="com.kii.app.youwill.iap.server.mock.*" />


    </context:component-scan>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
            <value>classpath:com/kii/app/youwill/iap/server/iapserver-cfg.properties</value>
            <value>classpath:com/kii/app/youwill/iap/server/iapserver-product-payserver-cfg.properties</value>
            </list>
        </property>
    </bean>


    <bean class="com.kii.app.youwill.iap.server.factory.KiiAppFactory" />

    <bean id="restProvider"
          class="com.kii.platform.ufp.client.springrest.impl.apache.HttpComponentsRestTemplateProvider"/>


</beans>