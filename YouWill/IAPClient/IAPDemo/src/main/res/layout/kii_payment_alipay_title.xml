<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AlipayTitle"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:background="@drawable/kii_payment_title_background"
    tools:ignore="Overdraw" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/kii_payment_title" />

    <Button
        android:id="@+id/kii_payment_btn_refresh"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/kii_payment_refresh_button"
        android:text="@string/kii_payment_refresh"
        android:textColor="@android:color/white"
        android:visibility="visible" />

</RelativeLayout>