<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="FloatWindowTheme" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="footer_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/footer_bg</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="footer_item_style">
        <item name="android:layout_width">132px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:layout_marginTop">15px</item>
        <item name="android:textColor">@drawable/footer_button_text_color</item>
        <item name="android:drawablePadding">6px</item>
        <item name="android:textSize">7pt</item>
        <item name="android:layout_marginBottom">15px</item>
    </style>

    <style name="header_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/title_bg_color</item>
    </style>

    <style name="show_all_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/show_all_color</item>
        <item name="android:text">@string/show_all</item>
        <item name="android:textSize">13pt</item>
        <item name="android:layout_marginRight">28px</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawableRight">@drawable/right_arrow</item>
        <item name="android:drawablePadding">5px</item>
    </style>

    <style name="left_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15pt</item>
        <item name="android:layout_marginLeft">28px</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="application_icon_style">
        <item name="android:layout_width">@dimen/app_icon_side_length</item>
        <item name="android:layout_height">@dimen/app_icon_side_length</item>
    </style>

    <style name="app_name_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">@dimen/app_icon_side_length</item>
        <item name="android:textSize">8pt</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/app_name_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="app_size_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">@dimen/app_icon_side_length</item>
        <item name="android:textSize">7pt</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/app_size_text_color</item>
    </style>

    <style name="cate_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10px</item>
        <item name="android:paddingBottom">9px</item>
        <item name="android:textSize">8pt</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/cate_btn_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:layout_marginRight">20px</item>
        <item name="android:button">@null</item>
    </style>
    <style name="settings_item_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">45px</item>
        <item name="android:paddingBottom">33px</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:paddingRight">35px</item>
        <item name="android:drawableRight">@drawable/right_arrow</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">#666666</item>
    </style>
</resources>
