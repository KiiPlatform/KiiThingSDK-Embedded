<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme"
           parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme"
           parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="SplashTheme"
           parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="footer_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">66px</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/footer_bg</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="footer_item_style">
        <item name="android:layout_width">132px</item>
        <item name="android:layout_height">49px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:layout_marginTop">11px</item>
        <item name="android:textColor">@drawable/footer_button_text_color</item>
        <item name="android:drawablePadding">3px</item>
        <item name="android:textSize">12px</item>
    </style>
    <style name="header_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/title_bg_color</item>
    </style>

    <style name="show_all_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/show_all_color</item>
        <item name="android:text">@string/show_all</item>
        <item name="android:textSize">13px</item>
        <item name="android:layout_marginRight">23px</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="left_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15px</item>
        <item name="android:layout_marginLeft">23px</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="application_icon_style">
        <item name="android:layout_width">@dimen/app_icon_side_length</item>
        <item name="android:layout_height">@dimen/app_icon_side_length</item>
    </style>
    <style name="app_name_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">@dimen/app_icon_side_length</item>
        <item name="android:textSize">13px</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/app_name_text_color</item>
    </style>
    <style name="app_size_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">@dimen/app_icon_side_length</item>
        <item name="android:textSize">11px</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/app_size_text_color</item>
    </style>
</resources>
