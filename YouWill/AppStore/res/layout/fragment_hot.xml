<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/background_color">
        <com.youwill.store.view.imagecoverflow.CoverFlowView
                xmlns:imageCoverFlow="http://schemas.android.com/apk/res-auto"
                android:id="@+id/coverflow"
                android:layout_width="match_parent"
                android:layout_height="239px"
                android:layout_marginTop="11px"
                imageCoverFlow:coverflowGravity="center_vertical"
                imageCoverFlow:coverflowLayoutMode="wrap_content"
                imageCoverFlow:enableReflection="false"
                imageCoverFlow:visibleImage="3"
                />

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23px"
                        android:layout_marginBottom="17px"
                >
            <TextView style="@style/left_label_style"
                      android:text="@string/latest_items"
                      android:textColor="#ffff3300"/>
            <TextView android:id="@+id/show_all_new"
                      style="@style/show_all_style"
                      android:layout_marginTop="1px"
                      android:layout_marginBottom="1px"
                    />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/latest_horizontal_view"
                android:layout_width="match_parent"
                android:layout_height="136px"
                android:background="#ffffff"
                android:scrollbarStyle="insideOverlay"
                android:layout_marginBottom="21px"/>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="#cccccc"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12px"
                        android:layout_marginBottom="12px"
                >
            <TextView style="@style/left_label_style"
                      android:text="@string/good_items"
                      android:textColor="#ff2b85be"/>
            <TextView android:id="@+id/show_all_good"
                      style="@style/show_all_style"
                      android:layout_marginTop="1px"
                      android:layout_marginBottom="1px"
                    />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/good_horizontal_view"
                android:layout_width="match_parent"
                android:layout_height="136px"
                android:background="#ffffff"
                android:scrollbarStyle="insideOverlay"/>
    </LinearLayout>
</ScrollView>