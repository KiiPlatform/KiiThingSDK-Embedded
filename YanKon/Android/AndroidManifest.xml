<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kii.yankon"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="21"/>

    <uses-permission
            android:name="android.permission.WRITE_EXTERNAL_STORAGE"
            android:maxSdkVersion="18"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission
            android:name="android.permission.READ_EXTERNAL_STORAGE"
            android:maxSdkVersion="18"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="com.kii.yankon.App"
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.kii.yankon.MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.kii.yankon.GuideActivity"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        <activity
                android:name="com.kii.yankon.AddLightsActivity"
                android:theme="@android:style/Theme.NoTitleBar"
                android:parentActivityName=".MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.kii.yankon.MainActivity"/>
        </activity>
        <activity
                android:name="com.kii.yankon.ColorPickerActivity"
                android:label="@string/title_activity_color_picker"
                android:parentActivityName=".MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.kii.yankon.MainActivity"/>
        </activity>

        <provider
                android:name="com.kii.yankon.providers.YanKonProvider"
                android:authorities="com.kii.yankon"
                android:enabled="true"
                android:exported="false">
        </provider>
    </application>

</manifest>
