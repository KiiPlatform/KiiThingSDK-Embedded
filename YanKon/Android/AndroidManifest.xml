<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kii.yankon"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GuideActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name=".activities.AddLightsActivity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kii.yankon.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ColorPickerActivity"
            android:label="@string/title_activity_color_picker"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kii.yankon.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ColorPickerActivity2"
            android:label="@string/title_activity_color_picker"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kii.yankon.MainActivity" />
        </activity>

        <provider
            android:name=".providers.YanKonProvider"
            android:authorities="com.kii.yankon"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".activities.AddLightGroupsActivity" />
        <activity android:name=".activities.AddScenesActivity" />
        <activity
            android:name=".activities.LightInfoActivity"
            android:label="@string/title_activity_light_info"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kii.yankon.MainActivity" />
        </activity>

        <service
            android:name=".services.NetworkReceiverService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".services.NetworkSenderService"
            android:exported="false" />

        <activity
            android:name=".activities.AddScheduleActivity"
            android:label="@string/title_activity_add_schedule"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kii.yankon.MainActivity" />
        </activity>
        <activity
            android:name=".activities.PickTargetActivity"
            android:label="@string/title_activity_pick_target" >
        </activity>
    </application>

</manifest>
